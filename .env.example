# ðŸ•Œ HikmahSphere Environment Configuration
# Copy this file to .env and update with your values

# ==================== Application ====================
NODE_ENV=production
APP_NAME=HikmahSphere

# ==================== Server Ports ====================
BACKEND_PORT=5000
FRONTEND_PORT=3000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ==================== MongoDB Configuration ====================
MONGO_USERNAME=admin
MONGO_PASSWORD=StrongPassword123!
MONGODB_URI=mongodb://admin:StrongPassword123!@mongodb:27017/hikmahsphere?authSource=admin

# ==================== JWT Authentication ====================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=30d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_change_this
REFRESH_TOKEN_EXPIRE=7d

# ==================== Redis Configuration ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================== Frontend Configuration ====================
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_ENVIRONMENT=production

# ==================== Email Configuration (Optional) ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@hikmahsphere.com

# ==================== Admin User (Initial Setup) ====================
ADMIN_EMAIL=admin@hikmah.com
ADMIN_PASSWORD=Admin@123456

# ==================== External APIs ====================
# Aladhan API is free and doesn't require a key
# Open-Meteo is free and doesn't require a key

# ==================== Security ====================
CORS_ORIGIN=http://localhost:3000,http://localhost
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================== Logging ====================
LOG_LEVEL=info
