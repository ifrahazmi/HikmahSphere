  # Enable Docker service
  services.docker.enable = true;

  packages = [
    pkgs.docker
    pkgs.docker-compose
    pkgs.nodejs_20
    pkgs.mongodb
    pkgs.sudo
    pkgs.pm2
  ];

  env = {};
  idx = {
    # Search for the extensions you want on https://open-vsx.org/ and use "publisher.id"
    extensions = [
      # "vscodevim.vim"
    ];

    # Enable previews
    previews = {
      enable = true;
      previews = {
